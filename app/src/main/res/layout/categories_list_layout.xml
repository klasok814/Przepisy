<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="3"
              tools:background = "@drawable/background_gradient">

    <ImageView
        android:layout_width="@dimen/icon_list_size"
        android:layout_height="@dimen/icon_list_size"
        android:id="@+id/categoryImage"
        android:layout_weight="0.5"
        android:layout_margin="@dimen/margin_size_5dp"
        android:src="@drawable/sniadania"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoryText"
        tools:text="Sniadania"
        android:textSize="@dimen/textSize_list_element"
        android:textColor="@color/white"
        android:layout_weight="2.5"
        android:layout_margin="@dimen/margin_size_5dp"
        android:layout_gravity="center"/>


</LinearLayout>